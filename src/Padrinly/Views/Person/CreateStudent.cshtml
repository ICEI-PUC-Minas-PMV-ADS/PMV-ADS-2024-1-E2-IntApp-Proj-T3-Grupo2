                                <div class="form-group">
                                    <label asp-for="StudentFirstDocument" class="control-label"></label>
                                    <input asp-for="StudentFirstDocument" class="form-control" type="number" />
                                    <span asp-validation-for="StudentFirstDocument" class="text-danger"></span>
                                </div>
